<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="textShadow">
        <item name="android:shadowColor">#333333</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="custom_action_bar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:color">@color/negroRoto</item>
    </style>
    <style name="custom_action_bar_year" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:color">@color/negroMasRoto</item>
    </style>

</resources>
